.mask {
  position: fixed;
  z-index: 99999;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.close {
  position: fixed;
  top: 23%;
  right: 13%;
  width: 60rpx;
  height: 60rpx;
  z-index: 999999;
}
.close image {
  width: 100%;
  height: 100%;
}
.box {
  position: fixed;
  z-index: 99999;
  width: 90%;
  height: 100%;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;
  border-radius: 3px;
  /* background-color: #FFFFFF; */
}
.box .info {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.box .info image {
  width: 100%;
  height: 100%;
}
.bottom {
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 110rpx;
  z-index: 9;
}
.bottom image {
  width: 100%;
  height: 100%;
}

