  content: '';
  position: absolute;
  -webkit-transform-origin: center;
          transform-origin: center;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  pointer-events: none;
  top: -50%;
  left: -50%;
  right: -50%;
  bottom: -50%;
  border-style: solid;
  border-color: #c8c7cc;
  border-left-width: 1px;
  border-right-width: 1px;
  border-top-width: 0;
  border-bottom-width: 0;
  -webkit-transform: scale(0.5);
          transform: scale(0.5);
}
