.theme {
  padding: 10rpx 30rpx;
}
.theme .nav {
  font-size: 46rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.theme .goods {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.theme .goods .item {
  width: 47%;
  background: white;
  border-radius: 10rpx;
  margin: 13rpx 0;
}
.theme .goods .item .img {
  width: 100%;
  height: 310rpx;
  border-radius: 10rpx;
}
.theme .goods .item image {
  width: 100%;
  height: 100%;
}
.theme .goods .item .bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 80rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 14rpx;
}
.theme .goods .item .bottom .right .btn {
  height: 40rpx;
  width: 100rpx;
  margin: 0;
  padding: 0;
  font-size: 23rpx;
  line-height: 40rpx;
}
.theme-l {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}
.uni-navbar__content {
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  display: block;
  position: relative;
  width: 100%;
  background-color: #fff;
  overflow: hidden;
}
.uni-navbar__content .uni-navbar__content_view {
  /* line-height: 170upx; */
}
.uni-navbar__header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  width: 100%;
  height: 120rpx;
  /* 	line-height: 170px; */
  font-size: 16px;
}
.uni-navbar__header-btns {
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  -webkit-flex-wrap: nowrap;
          flex-wrap: nowrap;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 120rpx;
  padding: 0 12rpx;
}
.uni-navbar__header-btns:first-child {
  padding-left: 0;
}
.uni-navbar__header-btns:last-child {
  width: 60rpx;
}
.uni-navbar__header-container {
  width: 100%;
  margin: 0 10rpx;
}
.uni-navbar__header-container-inner {
  font-size: 30rpx;
  text-align: center;
  padding-right: 60rpx;
  color: white;
}
.uni-navbar__placeholder-view {
  height: 44px;
}
.uni-navbar--fixed {
  position: fixed;
  z-index: 998;
}
.uni-navbar--shadow {
  -webkit-box-shadow: 0 1px 6px #ccc;
          box-shadow: 0 1px 6px #ccc;
}
.uni-navbar--border:after {
  position: absolute;
  z-index: 3;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #c8c7cc;
}

